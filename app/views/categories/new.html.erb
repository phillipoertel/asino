<div>
  <h1>Neue Kategorie</h1>
  
  <%= form_for(@category) do |f| %>
    <%= error_messages_for @category %>

    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>

    <%= f.label :category, 'In Ãœberkategorie' %>
    <%= f.collection_select(:category_id, 
                            Category.where('category_id is NULL').order('name'), :id, :name, {:include_blank => true}) %>

    <label class="checkbox">
  	  <%= f.check_box :transfer %>
      Zahlungen dieser Kategorie sind Transfers zwischen eigenen Konten
    </label>

    <p class="m20">
      <%= f.submit 'Speichern', :class => 'btn btn-primary' %> oder <%= link_to_function 'abbrechen', 'history.back(-1)' %>
    </p>

    <%= f.hidden_field :account_id %>
  <% end %>
</div>
