source :rubygems

gem 'rails'
gem 'devise'
gem 'mysql2'
gem 'feedzirra'

group :development do
   # a thin and *fast* server for development: http://code.macournoyer.com/thin/
  gem 'thin'
end

group :cucumber, :test do
  gem 'capybara'
  gem 'cucumber-rails'
  gem 'rspec-rails'
  gem 'fuubar' # prettier rspec output
  gem 'database_cleaner'
  gem 'factory_girl_rails'
end
